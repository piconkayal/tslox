{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lox",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lox",
          "match": "\\b(and|class|else|for|if|or|return|super|this|var|while)\\b"
        },
        {
          "name": "keyword.other.lox",
          "match": "\\b(fun|print)\\b"
        },
        {
          "name": "constant.language.lox",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.lox",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.lox",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.lox",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "comments": {
      "name": "comment.line.double-slash.lox",
      "begin": "//",
      "end": "$"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.lox",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.lox",
          "match": "(\\+|\\-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.lox",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.lox",
          "match": "(\\!|\\&\\&|\\|\\|)"
        },
        {
          "name": "punctuation.terminator.lox",
          "match": ";"
        },
        {
          "name": "punctuation.separator.lox",
          "match": ","
        },
        {
          "name": "punctuation.accessor.lox",
          "match": "\\."
        }
      ]
    },
    "identifiers": {
      "name": "variable.other.lox",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  },
  "scopeName": "source.lox"
}
