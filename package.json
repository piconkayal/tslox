{
  "name": "tslox",
  "version": "1.0.0",
  "description": "TypeScript tree-walk interpreter for the Lox programming language",
  "main": "dist/lox.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/lox.js",
    "dev": "tsx src/lox.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "oxlint src tests",
    "format": "biome format --write src tests",
    "check": "biome check src tests"
  },
  "keywords": [
    "lox",
    "typescript",
    "interpreter"
  ],
  "author": "piconkayal <piconn.js@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "oxlint": "^1.28.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
